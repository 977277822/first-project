<!DOCTYPE html>
<html>
  <head>
    <title>音乐剧管理</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <% include common/resources%>
  </head>
  <body>
  <ul class="nav nav-pills">
      <li role="presentation" class=""><a href="#">添加</a></li>
  </ul>

  <table class="table">
    <tr>
      <th>序号</th>
      <th>海报</th>
      <th>标题</th>
      <th>中文剧名</th>
      <th>英文剧名</th>
      <th>出演年份</th>
      <th>语种</th>
      <th>卡司</th>
      <th style="width:200px">简介</th>
      <th>相关专辑</th>
      <th>主创人员</th>
      <th>参演人员</th>
      <th>其他相似</th>
      <th>操作</th>
    </tr>
    <tr>
      <% items.forEach(function(item){ %>
      <td><%=item.id + 1%></td>
      <td><%=item.poster%></td>
      <td><%=item.title%></td>
      <td><%=item.c_name%></td>
      <td><%=item.e_name%></td>
      <td><%=item.show_datetime%></td>
      <td><%=item.language%></td>
      <td><%=item.cast%></td>
      <td><%=item.detail%></td>
      <td><%=item.collection%></td>
      <td><%=item.leading_creator%></td>
      <td><%=item.leading_in%></td>
      <td><%=item.other_similar%></td>
      <td>编辑 删除</td>
      <% }) %>
    </tr>
  </table>
  </body>
</html>
